# Enforce Unix newlines
*.*           text eol=lf
*.css         text eol=lf
*.html        text eol=lf
*.htm         text eol=lf
*.jsx         text eol=lf
*.mustache    text eol=lf
*.hbs         text eol=lf
*.handlebars  text eol=lf
.phtml        text eol=lf
.erb          text eol=lf
.eco          text eol=lf
.djhtml       text eol=lf
*.scss        text eol=lf
*.sass        text eol=lf
*.less        text eol=lf
*.styl        text eol=lf
*.org         text eol=lf
*.apib        text eol=lf
*.js          text eol=lf
*.json        text eol=lf
*.less        text eol=lf
*.md          text eol=lf
*.yml         text eol=lf
*.svg         text eol=lf

*.jpeg        binary
*.jpg         binary
*.gif         binary
*.png         binary
*.pdf         binary

# LFS
*.psd filter=lfs diff=lfs merge=lfs -text
*.pdf filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
*.mov filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.png filter=lfs diff=lfs merge=lfs -text
*.gif filter=lfs diff=lfs merge=lfs -text

# ProTip: Files that can change in random order
CHANGELOG.md  merge=union
