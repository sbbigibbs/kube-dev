# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{Makefile}]
indent_style = tab

[{*.js,*.json,*.css,*.html,*.yaml}]
indent_style = space
indent_size = 2

[{*.md,*.markdown,*.jade}]
trim_trailing_whitespace = false
